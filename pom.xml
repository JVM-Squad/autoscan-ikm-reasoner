	<!-- override configuration inherited to adjust for complex licensing -->
	<profiles>
		<profile>
			<id>java-source-additional-tasks</id>
			<activation>
				<file>
					<exists>${basedir}/src/main/java</exists>
				</file>
			</activation>
			<build>
				<plugins>
					<!-- apply licenses to all java source files
						Needs to match what LICENSE.txt and ATTRIBUTION.txt says.
						Also, it needs to not be indented
						-->
					<plugin>
						<groupId>com.mycila</groupId>
						<artifactId>license-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>apply-license-to-source</id>
								<goals>
									<goal>format</goal>
								</goals>
								<phase>generate-sources</phase>
								<configuration>
									<licenseSets>
										<licenseSet>
											<!-- Do not change this to <header /> as this will break -->
